{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": [
          "error",
          "always"
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "indent": [
          2,
          "tab"
        ],
        "no-tabs": 0,
        "no-useless-escape": "off"
    }
}
